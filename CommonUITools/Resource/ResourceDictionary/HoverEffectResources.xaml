      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Background" Value="{StaticResource Gray3}" />
      </Trigger>
      <Trigger Property="IsMouseOver" Value="False">
        <Setter Property="Background" Value="Transparent" />
      </Trigger>
    </Style.Triggers>
  </Style>
</ResourceDictionary>