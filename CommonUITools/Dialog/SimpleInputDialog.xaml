<local:BaseDialog
  x:Class="CommonUITools.View.SimpleInputDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CommonUITools.View"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.modernwpf.com/2019"
  d:DesignHeight="200"
  d:DesignWidth="300"
  DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
  mc:Ignorable="d">
  <DockPanel Height="35" MaxWidth="350">
    <!--  字符串为空则隐藏  -->
    <TextBlock
      MaxWidth="100"
      Margin="0,0,8,0"
      Text="{Binding Header}"
      TextAlignment="Left"
      TextWrapping="Wrap"
      Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text, Converter={StaticResource VisibilityEqualConverter}, ConverterParameter='|Collapsed'}" />
    <TextBox
      MinWidth="200"
      DockPanel.Dock="Right"
      Text="{Binding DetailText}" />
  </DockPanel>
</local:BaseDialog>
