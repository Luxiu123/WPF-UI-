<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:CommonUITools.Controls">
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="/CommonUITools;component/Resources/ResourceDictionary/ConverterResources.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <Style TargetType="local:InplaceControl">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:InplaceControl">
          <local:ToggleControl State="{TemplateBinding IsWriterVisible}">
            <local:ToggleControl.FirstControl>
              <ContentPresenter x:Name="WriterControl" Content="{TemplateBinding Writer}" />
            </local:ToggleControl.FirstControl>
            <local:ToggleControl.SecondControl>
              <ContentPresenter x:Name="ReaderControl" Content="{TemplateBinding Reader}" />
            </local:ToggleControl.SecondControl>
          </local:ToggleControl>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>