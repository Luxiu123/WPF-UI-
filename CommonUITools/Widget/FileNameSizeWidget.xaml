<ui:SimpleStackPanel
  x:Class="CommonUITools.Widget.FileNameSizeWidget"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CommonUITools.Widget"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.modernwpf.com/2019"
  Name="FileNameSizeWidgetRoot"
  HorizontalAlignment="Center"
  VerticalAlignment="Center"
  d:DesignHeight="450"
  d:DesignWidth="800"
  Orientation="Vertical"
  Spacing="{StaticResource MediumItemSpacing}"
  mc:Ignorable="d">
  <ui:SimpleStackPanel.Resources>
    <Style BasedOn="{StaticResource GlobalTextBlockStyle}" TargetType="TextBlock">
      <Setter Property="FontSize" Value="{StaticResource HeaderFontSize}" />
    </Style>
  </ui:SimpleStackPanel.Resources>

  <local:FileNameIconWidget FileName="{Binding FileName, ElementName=FileNameSizeWidgetRoot}" IconSize="30" />
  <local:FileSizeWidget
    FileName="{Binding FileName, ElementName=FileNameSizeWidgetRoot}"
    Prefix="文件大小："
    Visibility="{Binding FileSize, RelativeSource={RelativeSource Mode=Self}, Converter={StaticResource HideIfZeroConverter}}" />
</ui:SimpleStackPanel>
