<UserControl
  x:Class="CommonUITools.Widget.ToggleControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CommonUITools.Widget"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Name="ToggleControlRoot"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid>
    <ContentPresenter Content="{Binding FirstControl, ElementName=ToggleControlRoot}" Visibility="{Binding State, ElementName=ToggleControlRoot, Converter={StaticResource HideIfFalseConverter}}" />
    <ContentPresenter Content="{Binding SecondControl, ElementName=ToggleControlRoot}" Visibility="{Binding State, ElementName=ToggleControlRoot, Converter={StaticResource HideIfTrueConverter}}" />
  </Grid>
</UserControl>
