<Button
  x:Class="CommonUITools.Widget.IconButton"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CommonUITools.Widget"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Name="Root"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <StackPanel Orientation="Horizontal">
    <TextBlock
      Style="{StaticResource ButtonIconFontStyle}"
      Text="{Binding Icon, ElementName=Root}"
      Visibility="{Binding Icon, ElementName=Root, Converter={StaticResource HideIfEmptyConverter}}" />
    <TextBlock Style="{StaticResource ButtonTextBlockStyle}" Text="{Binding Text, ElementName=Root}" />
  </StackPanel>
</Button>
