<UserControl
  x:Class="CommonUITools.Widget.FileNameIconWidget"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
  Name="FileNameIconWidgetRoot"
  HorizontalAlignment="Center"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <StackPanel Orientation="Horizontal">
    <svgc:SvgViewbox
      Name="FileIconViewbox"
      Width="{Binding IconSize, ElementName=FileNameIconWidgetRoot}"
      Height="{Binding IconSize, ElementName=FileNameIconWidgetRoot}"
      Margin="10,0"
      Source="{Binding FileName, Converter={StaticResource FileIconConverter}, ElementName=FileNameIconWidgetRoot}"
      Stretch="Uniform" />
    <TextBlock Text="{Binding FileName, ElementName=FileNameIconWidgetRoot, Converter={StaticResource FileNameConverter}}" />
  </StackPanel>
</UserControl>
