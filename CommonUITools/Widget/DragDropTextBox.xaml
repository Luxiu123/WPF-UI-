<UserControl
  x:Class="CommonUITools.Widget.DragDropTextBox"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CommonUITools.Widget"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:util="clr-namespace:CommonUITools.Utils"
  Name="DragDropTextBoxRoot"
  d:DesignHeight="450"
  d:DesignWidth="800"
  util:DragDropHelper.BackgroundProperty="{x:Static UserControl.BackgroundProperty}"
  util:DragDropHelper.IsEnabled="True"
  AllowDrop="True"
  Background="Transparent"
  PreviewDrop="PreviewDropHandler"
  mc:Ignorable="d" />
