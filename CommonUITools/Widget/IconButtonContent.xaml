<UserControl
  x:Class="CommonUITools.Widget.IconButtonContent"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CommonUITools.Widget"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Name="IconButtonContentRoot"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <StackPanel Orientation="Horizontal">
    <TextBlock
      FontFamily="{StaticResource IconFontUrI}"
      Style="{StaticResource ButtonIconFontStyle}"
      Text="{Binding Icon, ElementName=IconButtonContentRoot}" />
    <TextBlock Text="{Binding Text, ElementName=IconButtonContentRoot}" />
  </StackPanel>
  <!--<TextBlock>
    <Run FontFamily="{StaticResource IconFontUrI}" Text="{Binding Icon, ElementName=IconButtonContentRoot}" />
    <Run Text="{Binding Text, ElementName=IconButtonContentRoot}" />
  </TextBlock>-->
</UserControl>
